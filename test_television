import pytest
from television import Television

class Test:
    def test_initial_state(self):
        tv = Television()
        assert tv.status == False
        assert tv.muted == False
        assert tv.volume == 0
        assert tv.channel == 0

    def test_power(self):
        tv = Television()
        tv.power()
        assert tv.status == True

    def test_channel_change(self):
        tv = Television()
        tv.power()
        tv.channel_up()
        assert tv.channel == 1
        tv.channel_down()
        assert tv.channel == 0

    def test_volume_change(self):
        tv = Television()
        tv.power()
        tv.volume_up()
        assert tv.volume == 1
        tv.volume_down()
        assert tv.volume == 0

    def test_mute(self):
        tv = Television()
        tv.power()
        tv.volume_up()
        tv.mute()
        assert tv.muted == True
        assert tv.volume == 0
        tv.mute()
        assert tv.muted == False
        assert tv.volume == 1
